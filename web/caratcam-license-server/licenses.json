const express = require('express');
const crypto = require('crypto');
const bodyParser = require('body-parser');
const fs = require('fs');
const app = express();
require('dotenv').config();

const stripe = require('stripe')(process.env.STRIPE_SECRET_KEY);

// Use raw body parser for Stripe
app.use(bodyParser.raw({ type: 'application/json' }));

// Load or initialize license token store
const LICENSES_FILE = './licenses.json';
let issuedTokens = new Set();

function loadTokensFromFile() {
  try {
    const data = fs.readFileSync(LICENSES_FILE, 'utf8');
    const tokens = JSON.parse(data);
    issuedTokens = new Set(tokens);
    console.log(`âœ… Loaded ${tokens.length} license(s) from disk`);
  } catch (err) {
    console.log("âš ï¸ No license file found, starting fresh");
    issuedTokens = new Set();
  }
}

function saveTokensToFile() {
  fs.writeFileSync(LICENSES_FILE, JSON.stringify(Array.from(issuedTokens)), 'utf8');
}

function generateToken() {
  return crypto.randomBytes(32).toString('hex');
}

// Root route
app.get("/", (req, res) => {
  res.send("âœ… License server is running.");
});

// Validate license token
app.get("/validate", (req, res) => {
  const token = req.query.token;
  if (!token) {
    return res.status(400).json({ error: "Missing token parameter" });
  }

  const isValid = issuedTokens.has(token);
  res.json({ valid: isValid });
});

// Stripe webhook
app.post('/webhook', async (req, res) => {
  const sig = req.headers['stripe-signature'];
  const endpointSecret = process.env.STRIPE_WEBHOOK_SECRET;

  let event;

  try {
    event = stripe.webhooks.constructEvent(req.body, sig, endpointSecret);
  } catch (err) {
    console.error('âŒ Webhook signature failed:', err.message);
    return res.status(400).send(`Webhook Error: ${err.message}`);
  }

  if (event.type === 'checkout.session.completed') {
    const session = event.data.object;
    const email = session.customer_details.email;

    const licenseKey = generateToken();
    issuedTokens.add(licenseKey);
    saveTokensToFile();

    const unlockLink = `https://www.camlabs.ai/unlocked-caratcam-single.html?token=${licenseKey}`;
    console.log(`âœ… LICENSE ISSUED TO: ${email}`);
    console.log(`ðŸ”“ UNLOCK LINK: ${unlockLink}`);
  }

  res.status(200).send('Received');
});

// Start server
const port = process.env.PORT || 3000;
app.listen(port, () => {
  loadTokensFromFile();
  console.log(`ðŸš€ License server listening on port ${port}`);
});
